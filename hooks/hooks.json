{
  "description": "Tone police: filters hostile/profane language from user prompts",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/tone-filter.py",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
